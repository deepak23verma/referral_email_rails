<h1>Log in</h1>

<div class="large-6 columns">
<%= form_tag sessions_path do %>
  <div>
    <h3 class="subheader"><%= label_tag :email %>
    <%= email_field_tag :email, params[:email] %></h3>
  </div>
  <div>
    <h3 class="subheader"><%= label_tag :password %>
    <%= password_field_tag :password %></h3>
  </div>
  <%= submit_tag "Log in", class: "medium secondary radius button" %>
<% end %>
</div>