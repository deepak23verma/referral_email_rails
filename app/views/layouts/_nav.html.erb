<div class="fixed">
  <nav class="top-bar fixed">
    <ul class="title-area">
      <li class="name"><h1><%= link_to 'eProf', root_path %></h1></li>
      <li class="divider"></li>
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>
    <section class="top-bar-section">
      <ul class="right">
        <li class="divider"></li>
        <% if current_user %>
          <li class="active"><%= link_to current_user.email, user_path(current_user) %></li>
          <li class="divider"></li>
          <li class="active"><%= link_to "Log out", logout_path %></li>
        <% else %>
          <li class="divider"></li>
          <li class="active"> <%= link_to "Sign up", signup_path %></li>
          <li class="divider"></li>
          <li class="active"><%= link_to "Log in", login_path  %></li>
        <% end %>
      </ul>
    </section>
  </nav>
</div>